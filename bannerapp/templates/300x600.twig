    <style>

      #banner {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        cursor: pointer;
        overflow: hidden;
        background: #000;
      }

      .absolute {
        position: absolute;
      }

      #vid_bg { 
         position: absolute;
         top: 0;
         left: 50%;
         width: auto;
         height: 100%;
         overflow: hidden;
          -webkit-filter: blur(8px);
        -moz-filter: blur(8px);
        -o-filter: blur(8px);
        -ms-filter: blur(8px);
        filter: blur(8px);
        transform: translateX(-50%);
        opacity: 0.6;
      }

      .size {
        width: 300px;
        height: 600px;
      }

      #logo {
        background: url('logo.png');
        top: 0;
        left: 0;
      }

      #txt_1 {
        background: url('txt_1.png');
        top: 0;
        left: 0;
      }

      #cta {
        background: url('cta.png');
        background-position: center center;
        background-size: contain;
        background-repeat: no-repeat;
        width: 131px;
        height: 35px;
        top: 450px;
        left: 75px;
      }

      #vid {  
        height: auto;
        width: 355px;
        left: -28px;
